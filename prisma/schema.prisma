generator client {
  provider = "prisma-client"
  output   = "./generated"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relación con notas como propietario
  notesOwned Note[]

  // Relación con notas como colaborador
  noteCollaborators NoteCollaborator[]
}

model Note {
  id        String   @id @default(uuid())
  titulo    String
  contenido String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Propietario (uno a muchos)
  propietarioId String
  propietario   User @relation(fields: [propietarioId],references: [id],onDelete: Cascade)

  // Colaboradores
  collaborators NoteCollaborator[]
}

model NoteCollaborator {
  id     String @id @default(uuid())
  noteId String
  userId String

  note Note @relation(fields: [noteId],references: [id],onDelete: Cascade)

  user User @relation(fields: [userId],references: [id],onDelete: Cascade)

  @@unique([noteId, userId])
}
